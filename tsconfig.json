{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@assets/*": ["src/assets/*"],
      "@hooks/*": ["src/hooks/*"],
      "@feature/*": ["src/feature/*"],
      "@common/*": ["src/common/*"],
      "@navigation/*": ["src/navigation/*"],
      "@redux/*": ["./src/redux/*"],
      "@utils/*": ["./src/common/utils/*"],
      "@api/*": ["./src/api/*"]
    }
  }
}
